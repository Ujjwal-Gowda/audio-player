{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0",
    "skipLibCheck": true
  },
  "include": ["src"]
}
